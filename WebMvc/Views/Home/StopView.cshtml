@model IEnumerable<WebMvc.Models.StopViewModel>;
@{
    ViewData["Title"] = "Stop Table";
}
<h3><a asp-action="Index">Go Back</a></h3>
<h2>Stop Table</h2>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Latitude)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Longitude)
            </th>
            <th>
                Update Button
            </th>
            <th>
                Delete Button
            </th>
        </tr>
    </thead>
    <tbody>
        @if(Model != null)
        {
            @foreach(var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(model => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(model => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(model => item.Latitude)
                    </td>
                    <td>
                        @Html.DisplayFor(model => item.Longitude)
                    </td>
                    <td>
                        <a asp-action="StopUpdate" asp-route-id="@item.Id">Update</a>
                    </td>
                    <td>
                        <a asp-action="StopDelete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
<a asp-action="StopCreate">Create Stop</a>