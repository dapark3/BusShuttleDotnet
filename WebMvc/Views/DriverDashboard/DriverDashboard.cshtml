@using DomainModel
@model WebMvc.Models.DriverDashboardModel;
@{
    ViewData["Title"] = "Driver Dashboard";
}

<div class="flex">
    <form asp-action="DriverDashboard">
        <div asp-validation-summary="ModelOnly" class="text-danger form-text"></div>
        <div class="form-group py-2 my-2">
            <label asp-for="LoopId" class="form-label"></label>
            <select asp-for="LoopId" class="form-select form-control">
                <option selected></option>
                @foreach(var loop in Model.Loops)
                {
                    <option value="@loop.Id">@loop.Name</option>
                }
            </select>
        </div>
        <div class="form-group py-2 my-2">
            <label asp-for="BusId" class="form-label"></label>
            <select asp-for="BusId" class="form-select form-control">
                <option selected></option>
                @foreach(var bus in Model.Buses)
                {
                    <option value="@bus.Id">@bus.BusNumber</option>
                }
            </select>
        </div>
        <div class="form-group py-2 my-2">
            <input type="submit" value="Begin" class="btn btn-primary" />
        </div>
    </form>
</div>