@model WebMvc.Models.EntrySelectModel;
@{
    ViewData["Title"] = "Create Entries";
}

<div class="flex flex-col justify-content-center border border-secondary text-center p-5 m-5">
    <form asp-action="DriverEntry" method="POST">
        <input type="hidden" asp-for="BusId" />
        <input type="hidden" asp-for="DriverId" />
        <input type="hidden" asp-for="LoopId" />
        <div asp-validation-summary="ModelOnly" class="text-danger form-text"></div>
        <div class="form-group py-2 my-2">
            <label asp-for="StopId"></label>
            <select asp-for="StopId">
                <option selected></option>
                @foreach(var stop in Model.Stops)
                {
                    <option value="@stop.Id">@stop.Name</option>
                }
            </select>
            <span asp-validation-for="StopId"></span>
        </div>
        <div class="form-group py-2 my-2">
            <label asp-for="Boarded"></label>
            <input asp-for="Boarded" />
            <span asp-validation-for="Boarded"></span>
        </div>
        <div class="form-group py-2 my-2">
            <label asp-for="LeftBehind"></label>
            <input asp-for="LeftBehind" />
            <span asp-validation-for="LeftBehind"></span>
        </div>
        <div class="form-group py-2 my-2">
            <input type="submit" value="Submit Entry" class="btn btn-primary" />
        </div>
    </form>
</div>